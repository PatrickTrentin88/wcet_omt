###                                           ###
### user customizable variables               ###
### (in-place edit or ~$ export OPTION=VALUE) ###
###                                           ###

WCET_TIMEOUT	?= 120							# seconds, 0: disabled
WCET_DEBUG      ?= 1							# 0: do nothing, 1: print extra debug information
WCET_OVERWRITE  ?= 2							# overwrite level
												# 0 : overwrite all files
												# 1 : do not overwrite any file except those generated by omt solvers
												# 2 : do not overwrite any file except result statistics
WCET_UNROLL     ?= 0							# 0 : do nothing, 1: attempt loop unroll
WCET_MERGE      ?= 0							# 0 : each `.c` in a directory is separately handled
												# 1 : all `.c` in a directory are merged in a single bytecode
WCET_REPEAT     ?= 0							# 0 : execute each handler once with default configurations
												# N > 0 : execute the handler N times over the same
												# 		formula with a different random seed taken
												#		from a fixed list

###                                           ###
### include recipes from Master Makefile      ###
###                                           ###

include ../../Makefile.master

###                                           ###
### resource location                         ###
###                                           ###

WCET_BENCH_DIR	:= $(realpath $(dir $(firstword $(MAKEFILE_LIST))))
WCET_STATS_DIR	:= $(subst $(WCET_OMT_DIR),$(WCET_OMT_DIR)/stats,$(WCET_BENCH_DIR))

###                                           ###
### user customizable rules                   ###
###                                           ###

all : \
	default_all
